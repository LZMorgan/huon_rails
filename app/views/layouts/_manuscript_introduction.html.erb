<!-- Reading Grid for Manuscript Introductions -->
<div class="container">

<!-- Title Cell -->
    <div class="row">
        <div class="col-12">
            <p class="ms-intro-h1"><%= @city %>, <%= @repository %> <%= @shelflisting %></p>
        </div>
    </div>

<!-- Intro Data Row 1 -->
    <div class="row">
        <div class="col-6">
            <p class="ms-resp">Edition prepared by <%= @editor %></p>
            <p class="ms-resp">TEI encoding by <%= @encoder %> and Leslie Zarker Morgan</p>
        </div>
        <div class="col-6">
        </div>
    </div>

<!-- Intro Data Row 2 -->
    <div class="row">
        <div class="col-6">
            <p class="ms-intro-h2">Date</p>
            <p class="ms-intro"><%= @date %></p>
        </div>
        <div class="col-6">
            <p class="ms-intro-h2">Origin</p>
            <p class="ms-intro"><%= @origin %></p>
        </div>
    </div>

<!-- Intro Data Row 3 -->        
    <div class="row"> 
        <div class="col-6">
            <p class="ms-intro-h2">Incipit</p>  
            <p class="ms-intro"><%= @incipit %></p>
        </div>
        <div class="col-6">
            <p class="ms-intro-h2">Excipit</p>
            <p class="ms-intro"><%= @explicit %></p>
        </div>
    </div>

<!-- Copyright Statement Row 4 -->
    <div class="row">
        <p class="copyright">Â© <%= @copyright %></p>

<hr>

<!-- Introduction Cell -->
    <div class="row">
        <div class="col-12">
            <p class="ms-intro-h3">Introduction to Edition</p>
            <p><%= @introduction %></p>
        </div>
    </div>

<!-- Image and Intro Row -->
<!-- Image Cell -->
    <div class="row">
        <div class="col-6">
            <p class="ms-image"><%= image_tag('t-120v.jpg', id: 'ms-image', alt: 'Manuscript image') %></p>
            <p class="ms-caption">Turin, N III 19, fol. 120v.<lb> Rajna: <em>Ug. e gli uccelli.</em></p>
        </div>

<!-- Table of Contents Cell -->
        <div class="col-6">
            <div class="ms-toc">
            <p class="ms-toc">Table of Contents</p>
            <hr>
            <ol class="ms-toc">
                <li class="ms-toc">Introduction</li>
                <li class="ms-toc">Editorial Criteria</li>
                <li class="ms-toc"><%= link_to('Encoding Criteria', url_for(params.merge(:t_praxis => true))) %></li>
                <li class="ms-toc"><%= link_to('Digital Edition', url_for(params.merge(:edition => true))) %></li>
                <li class="ms-toc">Digital Facsimile</li>
                <li class="ms-toc">Concordance</li>
                <li class="ms-toc">Codicology</li>
                <li class="ms-toc">Glossary</li>
            </ol>
            </div>
            </div>






